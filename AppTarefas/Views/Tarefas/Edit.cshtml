@model AppTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Edit";
}

<h1 class=" mt-3">Editar Tarefa: </h1>

<h4>Tarefa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TarefaId" />
            <div class="form-floating mb-3">
                <input asp-for="TarefaNome" class="form-control"
                       placeholder=" " />
                <label asp-for="TarefaNome" class="form-label text-dark">Nome da Tarefa:</label>
                <span asp-validation-for="TarefaNome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DataInicio" type="text" value="@DateTime.Now.ToString()" readonly class="form-control"
                       placeholder=" " />
                <label asp-for="DataInicio" class="form-label text-dark">Data de Inicio:</label>
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="DataFim" type="datetime-local" id="dataFim" class="form-control"
                       placeholder=" " />
                <label asp-for="DataFim" class="form-label text-dark">Data do Fim:</label>
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <label asp-for="CategoriaId" class="control-label  text-dark">Categoria:</label>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="StatusId" id="status" class="form-control" asp-items="ViewBag.StatusId" onchange="testar()"></select>
                <label asp-for="StatusId" class="control-label text-dark">Status:</label>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Cancelar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
