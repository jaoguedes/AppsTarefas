@model IEnumerable<AppTarefas.Models.Tarefa>


@{
    ViewData["Title"] = "Index";
}

<h1>Tarefas:</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>
<table class="table table-hover rounded-5
        text-center caption-top
        table-light table-bordered">
    <thead class="table table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TarefaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TarefaNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>
                <td style="color: @item.Categoria.CategoriaCor;">
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.StatusNome)
                </td>
                <td>

                    <a asp-action="Edit" class="btn" asp-route-id="@item.TarefaId" data-bs-toggle="tooltip"
                       data-bs-title="Editar"
                       data-bs-placement="bottom">
                        <svg bootstrap-icon="PencilSquare" width="24" height="24" class="text-success"></svg>
                    </a>

                    <a asp-action="Details" class="btn" asp-route-id="@item.TarefaId"
                       data-bs-title="Detalhes"
                       data-bs-placement="bottom"
                       data-bs-toggle="modal" data-bs-target="#modalDetalhes_@item.TarefaId">
                        <svg bootstrap-icon="FileEarmarkTextFill" width="24" height="24" class="text-primary"></svg>
                    </a>

                    <a asp-action="Delete" class="btn " asp-route-id="@item.TarefaId" data-bs-toggle="tooltip"
                       data-bs-title="Excluir"
                       data-bs-placement="bottom">
                        <svg bootstrap-icon="TrashFill" width="24" height="24" class="text-danger"></svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
@foreach (var item in Model)
{
    <div class="modal fade" id="modalDetalhes_@item.TarefaId" tabindex="-1" aria-labelledby="modalDetalhesLabel_@item.TarefaId" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #2C3950;">
                    <h1 class="modal-title fs-5" id="modalDetalhesLabel_@item.TarefaId">Detalhes da Tarefa</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="background-color: #2C3950;">
                    <div>
                        <h4>Tarefa</h4>
                        <hr />

                        <dl class="row">
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.TarefaNome)
                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => item.TarefaNome)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.DataInicio)
                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => item.DataInicio)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.DataFim)
                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => item.DataFim)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.Categoria)
                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => item.Categoria.CategoriaNome)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => item.Status.StatusNome)
                            </dd>
                        </dl>

                    </div>
                </div>
                <div class="modal-footer" style="background-color: #2C3950;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>


}