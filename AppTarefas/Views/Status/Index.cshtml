@model IEnumerable<AppTarefas.Models.Status>

@{
    ViewData["Title"] = "Status";
}

<h1>Status</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>

<table class="table table-hover
        rounded-5
        text-center caption-top
        table-light table-bordered
         ">
    <thead class=" table table-dark ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusNome)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> 
                    @Html.DisplayFor(modelItem => item.StatusNome)
                </td>
                <td>

                    <a asp-action="Edit" class="btn" asp-route-id="@item.StatusId"
                       data-bs-toggle="tooltip"
                       data-bs-title="Editar"
                       data-bs-placement="bottom">
                        <svg bootstrap-icon="PencilSquare" class="text-success" width="24" height="24"></svg>
                    </a>


                    <a asp-action="Details" class="btn" asp-route-id="@item.StatusId"
                       data-bs-title="Detalhes"
                       data-bs-placement="bottom"
                       data-bs-toggle="modal" data-bs-target="#modalDetalhes_@item.StatusId">
                        <svg bootstrap-icon="FileEarmarkTextFill" width="24" height="24" class="text-primary"></svg>
                    </a>

                    <a asp-action="Delete" class="btn" asp-route-id="@item.StatusId"               
                       data-bs-toggle="tooltip"
                       data-bs-title="Excluir"
                       data-bs-placement="bottom">
                        <svg bootstrap-icon="TrashFill" class="text-danger" width="24" height="24"></svg>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>



<!-- Modal -->
@foreach (var item in Model)
{
    <div class="modal fade" id="modalDetalhes_@item.StatusId" tabindex="-1" aria-labelledby="modalDetalhesLabel_@item.StatusId" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #2C3950;">
                    <h1 class="modal-title fs-5" id="modalDetalhesLabel_@item.StatusId">Detalhes dos Status</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="background-color: #2C3950;">
                    <div>
                        <h4>Status:</h4>

                        <dl class="row">
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.StatusNome)
                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => item.StatusNome)
                            </dd>
                        </dl>

                    </div>
                </div>
                <div class="modal-footer" style="background-color: #2C3950;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>


}