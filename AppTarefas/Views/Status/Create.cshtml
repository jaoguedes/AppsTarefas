@model AppTarefas.Models.Status

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar novo Status</h1>

<h4>Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="StatusNome" class="form-control"
                       placeholder=" " />
                <label asp-for="StatusNome" class="form-label text-dark">Nome do Status:</label>
                <span asp-validation-for="StatusNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
