<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


<script>

    function testar() {
       let selectElement = document.getElementById('status');
        let selectedIndex = selectElement.selectedIndex;
        let selectedOption = selectElement.options[selectedIndex];
        let selectedText = selectedOption.text;
        console.log(selectedText);

        let aux = document.getElementById('dataFim');

        if (selectedText === 'Concluído') {
            var hoje = new Date();
            var ano = hoje.getFullYear();
            var mes = String(hoje.getMonth() + 1).padStart(2, '0');
            var dia = String(hoje.getDate() ).padStart(2, '0');
            var hora = String(hoje.getHours() ).padStart(2, '0');
            var minutos = String(hoje.getMinutes() ).padStart(2, '0');
            aux.value = `${dia}/${mes}/${ano} ${hora}:${minutos}`;
        }
        else{ 
            aux.value = ``;
        }
    }

</script>